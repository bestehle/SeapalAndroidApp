<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tripslistheader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#7A8B8B"
    android:orientation="horizontal" >

    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/tripNameHeader"
        android:textSize="20sp" />

    <TextView
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="@string/tripStartTimeHeader"
        android:textSize="20sp" />

    <TextView
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="@string/tripFromHeader"
        android:textSize="20sp" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/tripDestinationHeader"
        android:textSize="20sp" />

</LinearLayout>