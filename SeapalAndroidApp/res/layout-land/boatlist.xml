<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom" 
    android:id="@+id/boatlist">

    <TextView
        android:id="@+id/boatname"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:text=""
        android:textSize="12sp" >
    </TextView>

    <TextView
        android:id="@+id/boattype"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:text=""
        android:textSize="12sp" >
    </TextView>

    <TextView
        android:id="@+id/constructor"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:text=""
        android:textSize="12sp" >
    </TextView>

    <TextView
        android:id="@+id/owner"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:text=""
        android:textSize="12sp" >
    </TextView>

    <Button
        android:id="@+id/showTripsButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/arrowbutton"
        android:contentDescription="@string/showTripsButton"
        android:focusable="false" >
    </Button>

</LinearLayout>