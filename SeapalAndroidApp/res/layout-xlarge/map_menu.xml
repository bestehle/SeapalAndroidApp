<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/mapmenu" >
    
    <ImageButton 
        android:id="@+id/setMark"
        android:layout_width="330dp"
        android:layout_height="86dp"
        android:src="@drawable/dropdownbuttontop"
        android:contentDescription="@string/menuButton"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="50dp"
        android:onClick="addMark" />
    
    <ImageView 
        android:id="@+id/markImage"
        android:layout_width="50dp"
    	android:layout_height="50dp"
    	android:scaleType="fitXY"
        android:src="@drawable/markicon"
        android:contentDescription="@string/menuButton"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="70dp" />
    
    <TextView
        android:id="@+id/markLabel"
        style="@style/blackLetters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="75dp"
        android:text="@string/setMark"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <ImageButton 
        android:id="@+id/setRoute"
        android:layout_width="330dp"
        android:layout_height="86dp"
        android:src="@drawable/dropdownbutton"
        android:contentDescription="@string/menuButton"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_marginTop="131dp"
        android:layout_marginLeft="50dp" />
    
    <ImageView 
        android:id="@+id/routeImage"
        android:layout_width="50dp"
    	android:layout_height="50dp"
    	android:scaleType="fitXY"
        android:src="@drawable/routesicon"
        android:contentDescription="@string/menuButton"
        android:layout_marginTop="151dp"
        android:layout_marginLeft="70dp" />
    
    <TextView
        android:id="@+id/routeLabel"
        style="@style/blackLetters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="161dp"
        android:text="@string/setRoute"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <ImageButton 
        android:id="@+id/calcDistance"
        android:layout_width="330dp"
        android:layout_height="86dp"
        android:src="@drawable/dropdownbutton"
        android:contentDescription="@string/menuButton"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_marginTop="217dp"
        android:layout_marginLeft="50dp" />
        
    <ImageView 
        android:id="@+id/distanceImage"
        android:layout_width="50dp"
    	android:layout_height="50dp"
    	android:scaleType="fitXY"
        android:src="@drawable/distanceiconmini"
        android:contentDescription="@string/menuButton"
        android:layout_marginTop="237dp"
        android:layout_marginLeft="70dp" />
    
    <TextView
        android:id="@+id/distanceLabel"
        style="@style/blackLetters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="247dp"
        android:text="@string/calcDistance"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <ImageButton 
        android:id="@+id/makeFinish"
        android:layout_width="330dp"
        android:layout_height="86dp"
        android:src="@drawable/dropdownbutton"
        android:contentDescription="@string/menuButton"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_marginTop="303dp"
        android:layout_marginLeft="50dp" />
    
    <ImageView 
        android:id="@+id/aimImage"
        android:layout_width="50dp"
    	android:layout_height="50dp"
    	android:scaleType="fitXY"
        android:src="@drawable/curlokaiconmini"
        android:contentDescription="@string/menuButton"
        android:layout_marginTop="323dp"
        android:layout_marginLeft="70dp"
         />
    
    <TextView
        android:id="@+id/aimLabel"
        style="@style/blackLetters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="333dp"
        android:text="@string/aim"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <ImageButton 
        android:id="@+id/delete"
        android:layout_width="330dp"
        android:layout_height="86dp"
        android:src="@drawable/dropdownbuttonbottom"
        android:contentDescription="@string/menuButton"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_marginTop="389dp"
        android:layout_marginLeft="50dp" />
    
    <ImageView 
        android:id="@+id/deleteImage"
        android:layout_width="50dp"
    	android:layout_height="50dp"
    	android:scaleType="fitXY"
        android:src="@drawable/discardiconmini"
        android:contentDescription="@string/menuButton"
        android:layout_marginTop="409dp"
        android:layout_marginLeft="70dp" />
    
    <TextView
        android:id="@+id/deleteLabel"
        style="@style/blackLetters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="419dp"
        android:text="@string/map_menu_delete"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>